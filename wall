                          </div>
                      </div>
                  </div>
              </div>
              <div v-else class="text-center py-20 text-gray-400">æ²’æœ‰ç¬¦åˆæ¢ä»¶çš„è°·å­</div>
              <div class="mt-12 text-center text-gray-400 text-sm pb-8 border-t border-gray-100 pt-8">
                  ç•¶å‰å±•ç¤ºï¼š{{ selectedSeries.join(', ') }} <br> å…± {{ displayItems.length }} å¼µç…§ç‰‡
              </div>
          </div>

      </div>

      <script>
          const { createApp, ref, computed, onMounted } = Vue;

          createApp({
              setup() {
                  const step = ref(1);
                  const allItems = ref([]);
                  const displayItems = ref([]);
                  const selectedSeries = ref([]);
                  const seriesStats = ref([]);
                  
                  const hasLocalData = ref(false);
                  const localCount = ref(0);

                  onMounted(() => {
                      // æª¢æŸ¥æœ¬åœ°æ˜¯å¦æœ‰æ•¸æ“š (åŒæºç­–ç•¥)
                      const savedItems = localStorage.getItem('guzi_collection_v1');
                      if (savedItems) {
                          try {
                              const parsed = JSON.parse(savedItems);
                              if (parsed.length > 0) {
                                  hasLocalData.value = true;
                                  localCount.value = parsed.length;
                              }
                          } catch(e) {}
                      }
                  });

                  const useLocalData = () => {
                      const savedItems = localStorage.getItem('guzi_collection_v1');
                      if (savedItems) {
                          processData(JSON.parse(savedItems));
                      }
                  };

                  const loadBackup = (event) => {
                      const file = event.target.files[0];
                      if (!file) return;
                      const reader = new FileReader();
                      reader.onload = (e) => {
                          try {
                              const rawData = JSON.parse(e.target.result);
                              const loadedItems = rawData.items || (Array.isArray(rawData) ? rawData : []);
                              processData(loadedItems);
                          } catch (err) { alert('è®€å–å¤±æ•—ï¼'); }
                      };
                      reader.readAsText(file);
                  };

                  const processData = (data) => {
                      allItems.value = data.sort((a, b) => new Date(b.date) - new Date(a.date));
                      analyzeSeries();
                      step.value = 2;
                  };

                  const analyzeSeries = () => {
                      const stats = {};
                      allItems.value.forEach(item => {
                          const sName = item.series ? item.series.trim() : 'æœªåˆ†é¡';
                          if (!stats[sName]) stats[sName] = 0;
                          stats[sName]++;
                      });
                      seriesStats.value = Object.keys(stats)
                          .map(key => ({ name: key, count: stats[key] }))
                          .sort((a, b) => b.count - a.count);
                      selectedSeries.value = []; 
                  };

                  const toggleSeries = (name) => {
                      if (selectedSeries.value.includes(name)) selectedSeries.value = selectedSeries.value.filter(s => s !== name);
                      else selectedSeries.value.push(name);
                  };
                  const selectAll = () => selectedSeries.value = seriesStats.value.map(s => s.name);
                  const deselectAll = () => selectedSeries.value = [];
                  
                  const calculateSelectedCount = computed(() => {
                      return allItems.value.filter(item => {
                          const sName = item.series ? item.series.trim() : 'æœªåˆ†é¡';
                          return selectedSeries.value.includes(sName);
                      }).length;
                  });

                  const generateWall = () => {
                      displayItems.value = allItems.value.filter(item => {
                          const sName = item.series ? item.series.trim() : 'æœªåˆ†é¡';
                          return selectedSeries.value.includes(sName);
                      });
                      step.value = 3;
                      window.scrollTo(0, 0);
                  };

                  const printPage = () => window.print();

                  return {
                      step, allItems, displayItems, seriesStats, selectedSeries,
                      hasLocalData, localCount, useLocalData,
                      loadBackup, toggleSeries, selectAll, deselectAll, generateWall, printPage, calculateSelectedCount
                  };
              }
          }).mount('#app');
      </script>
  </body>
